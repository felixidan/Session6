<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button android:text="Broadcast Recievers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToBroadcasts"
        />

    <Button android:text="Notifications Demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToNotifications"
        />

    <Button android:text="Services Demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToServices"
        />
    <Button android:text="Sync Adapter Demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doSync"
        />

</LinearLayout>
